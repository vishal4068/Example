def extract_hyperlink_text(pdf_path):
    doc = fitz.open(pdf_path)
    hyperlinks_info = []

    for page_num, page in enumerate(doc, start=1):
        links = page.get_links()
        for link in links:
            if link['kind'] == fitz.LINK_URI:
                rect = fitz.Rect(link['from'])
                words = page.get_text("words")
                link_text = ""
                text_fragments = []  # Store text fragments for concatenation
                for w in words:
                    word_rect = fitz.Rect(w[:4])
                    if word_rect.intersects(rect):
                        # Adjusting to prevent extracting text outside the range of the hyperlink
                        if (abs(word_rect.y0 - rect.y0) < 10) and (abs(word_rect.y1 - rect.y1) < 10):
                            text_fragments.append(w[4])
                            if word_rect.contains(rect):
                                link_text += " ".join(text_fragments) + " "  # Concatenate text fragments
                                text_fragments = []  # Clear text fragments for the next iteration
                hyperlink_url = link['uri']
                hyperlinks_info.append((link_text.strip(), hyperlink_url, page_num))

    doc.close()
    return hyperlinks_info
