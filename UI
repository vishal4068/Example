<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PDF Hyperlink Extractor</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    input[type="file"] {
      margin-bottom: 10px;
    }
    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>PDF Hyperlink Extractor</h2>
    <form id="uploadForm">
      <input type="file" id="pdfFile" accept=".pdf" required>
      <button type="submit">Extract Hyperlinks</button>
    </form>
    <div id="result" style="display: none;">
      <p>Hyperlinks extracted successfully!</p>
      <p>Download the Excel file: <a id="downloadLink" href="#" download>Hyperlinks.xlsx</a></p>
    </div>
  </div>

  <script>
    document.getElementById('uploadForm').addEventListener('submit', function(event) {
      event.preventDefault();
      var formData = new FormData();
      formData.append('pdfFile', document.getElementById('pdfFile').files[0]);

      fetch('/extract_hyperlinks', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          document.getElementById('result').style.display = 'block';
          document.getElementById('downloadLink').href = data.excel_url;
        } else {
          alert('Error: ' + data.error);
        }
      })
      .catch(error => {
        alert('Error: ' + error);
      });
    });
  </script>
</body>
</html>
