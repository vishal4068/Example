import fitz

def detect_charts_with_red_border(pdf_path):
    doc = fitz.open(pdf_path)
    
    charts_with_red_border = []
    
    for page_number in range(len(doc)):
        page = doc.load_page(page_number)
        page_rect = page.rect
        page_texts = page.get_text("dict")
        
        for text in page_texts["blocks"]:
            for line in text["lines"]:
                for span in line["spans"]:
                    color = span["color"]
                    bbox = span["bbox"]
                    if color == (1.0, 0.0, 0.0):  # Check if text color is red
                        charts_with_red_border.append((page_number + 1, bbox))
    
    doc.close()
    return charts_with_red_border

# Example usage
pdf_path = 'your_pdf_file.pdf'
charts_with_red_border = detect_charts_with_red_border(pdf_path)
print("Charts with red border found:", charts_with_red_border)
